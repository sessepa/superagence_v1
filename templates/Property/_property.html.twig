<div class="card mb-4">
    <div class="card-body">
       <h5 class="card-title">
           <a href="{{ path('property.show',{id: properti.id, slug: properti.slug}) }}">{{ properti.title }}</a>
       </h5>

        <p class="card-text">{{ properti.surface}} m² - {{ properti.city}} ({{ properti.postalcode }})</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold">
            {{ properti.getFormattedPrice }} €
        </div>
    </div>

</div>